{
  "name": "Daf Yomi Helper",
  "version": "1.1",
  "manifest_version": 2,
  "description": "Daf Helper Plugin",
  "icons": { "16": "DafYomiLogo.png",
    "48": "DafYomiLogo.png",
   "128": "DafYomiLogo.png" },

   "page_action":
   {
    "default_icon": {"16": "DafYomiLogo.png",
        "48": "DafYomiLogo.png",
       "128": "DafYomiLogo.png" }
   },
  "background": {
    "scripts": [
        "backgroundScript.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://daf-yomi.com/*",
        "*://*.daf-yomi.com/*"
      ],
      "js": [
        "jquery-1.8.2.min.js","contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "declarativeContent"

  ]
}
